# ============================================
# PROMPTY CHALLENGE - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# Database (PostgreSQL with pg8000 driver)
DATABASE_URL=postgresql+pg8000://user:password@host:5432/database_name

# JWT Configuration
JWT_SECRET=your-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=6

# Groq API (Get key from https://console.groq.com)
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TIMEOUT=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Event Configuration
EVENT_NAME=Prompty Challenge
MAX_CONCURRENT_USERS=60

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# Logging
LOG_LEVEL=INFO
