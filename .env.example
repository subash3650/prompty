# ============================================
# PROMPTY CHALLENGE - ENVIRONMENT CONFIGURATION
# ============================================

# Database (PostgreSQL with pg8000 driver)
DATABASE_URL=postgresql+pg8000://postgres:subash%40123@localhost:5432/prompty

# JWT Configuration
JWT_SECRET=prompty-challenge-secret-key-must-be-at-least-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=6

# Groq API (Get key from https://console.groq.com)
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TIMEOUT=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Event Configuration
EVENT_NAME=Prompty Challenge
MAX_CONCURRENT_USERS=60

# Admin Credentials
ADMIN_USERNAME=admin@prompty
ADMIN_PASSWORD=adminprompty

# Logging
LOG_LEVEL=INFO
